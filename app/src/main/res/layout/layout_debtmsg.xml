<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">

<LinearLayout
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款类型:" />

            <TextView
                android:id="@+id/loan_type"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="催收诉求:" />

            <TextView
                android:id="@+id/demands_of_collection"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="委单等级:" />

            <TextView
                android:textColor="#3290f2"
                android:id="@+id/get_level"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="催收期限:" />

            <TextView
                android:textColor="#3290f2"
                android:id="@+id/collecting_days"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="催收佣金:" />

            <TextView
                android:textColor="#ffa800"
                android:id="@+id/collection_commission"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款金额:" />

            <TextView
                android:id="@+id/loan_amount"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代偿金额:" />

            <TextView
                android:id="@+id/loan_compensatory_amount"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逾期金额:" />

            <TextView
                android:id="@+id/loan_overdue_amount"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="违约金额:" />

            <TextView
                android:id="@+id/loan_default_amount"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款期限:" />

            <TextView
                android:id="@+id/loan_term"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                style="@style/debtmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逾期期数:" />

            <TextView
                android:id="@+id/loan_start_overdue_time"
                style="@style/debtmsg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:layout_marginTop="15dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      style="@style/debtmsg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="过往催记"/>

    <TextView
        style="@style/debtmsg"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/historical_collection_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
</LinearLayout>

</LinearLayout>
</ScrollView>