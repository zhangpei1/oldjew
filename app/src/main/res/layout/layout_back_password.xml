<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title"></include>
<LinearLayout
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">


    <LinearLayout
        android:layout_marginLeft="18dp"

        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/text_edittext"
                android:textSize="12sp"
                android:layout_marginRight="80dp"
                android:hint="请输入手机号码"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="47dp" />


            <TextView
                android:layout_marginRight="9dp"
                android:id="@+id/obtain_text"
                android:textColor="#3290f2"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="获取验证码"
                android:background="@drawable/getverification"
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="18dp"
        android:background="#3290f2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />
    <LinearLayout
        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/write_ed"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                android:hint="输入验证码"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="47dp" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
       android:layout_marginLeft="18dp"
        android:background="#3290f2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />
    <LinearLayout
        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
                android:id="@+id/write_password"
                android:textSize="12sp"
                android:layout_marginRight="12dp"
                android:hint="填写密码"
                android:layout_marginBottom="3dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="47dp" />

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:background="#3290f2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />
    <Button
        android:id="@+id/find_button"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="确定"
        android:background="@drawable/selector_details"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
</LinearLayout>
</LinearLayout>
