<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_title"
        android:id="@+id/mylistdetails_title"></include>
    <android.support.design.widget.TabLayout
        app:tabSelectedTextColor="#3290F2"
        app:tabIndicatorColor="#3290F2"
        android:background="#ffffff"
        android:id="@+id/mylistdetails_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mylistdetails_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
   <RelativeLayout
       android:id="@+id/isshow_uploading"
       android:background="#ffffff"
       android:layout_width="match_parent"
       android:layout_height="48dp">

       <TextView
           android:id="@+id/upcollection"
           android:paddingTop="3dp"
           android:paddingBottom="3dp"
           android:paddingRight="5dp"
           android:paddingLeft="5dp"
           android:background="@drawable/collector_uploading"
           android:layout_marginRight="10dp"
           android:textSize="15sp"
           android:textColor="#3090F2"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="上传催记"/>
   </RelativeLayout>
</LinearLayout>
