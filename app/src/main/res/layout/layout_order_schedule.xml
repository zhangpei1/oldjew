<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical">


    <include layout="@layout/layout_title"></include>

        <android.support.v7.widget.RecyclerView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:divider="#000000"
            android:dividerHeight="10dp"
            android:layout_height="0dp"
            android:id="@+id/order_chschedule_recyclerview">

        </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="15dp"

            android:paddingBottom="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/single_back"
                android:layout_marginRight="12dp"
                android:textColor="#3290F2"
                android:background="@drawable/apply"
                android:gravity="center"
                android:text="申请退单"
                android:layout_width="74dp"
                android:layout_height="28dp" />
            <TextView
                android:id="@+id/apply_postpone"
                android:layout_marginRight="12dp"
                android:textColor="#3290F2"
                android:background="@drawable/apply"
                android:gravity="center"
                android:text="申请延期"
                android:layout_width="74dp"
                android:layout_height="28dp" />
            <TextView
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:id="@+id/apply_accounts"
                android:layout_marginRight="10dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/apply_checked"
                android:gravity="center"
                android:text="查看交接证明"
                android:layout_width="wrap_content"
                android:layout_height="28dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
