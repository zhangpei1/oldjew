<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/dim_foreground_material_dark</item>
    </style>

    <style name="ActionBarTheme" parent="AppTheme"></style>

    <style name="ActionBarTheme.NoActionBar" parent="ActionBarTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@drawable/shape_linearyout</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="RbMainTab" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/textcolor</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">#3290f2</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">#3290f2</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/dim_foreground_material_dark</item>
    </style>

    <style name="universa">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="universa_edittext">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo"></style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#3290f2</item>
        <item name="colorPrimaryDark">#3290f2</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textsize">
        <item name="android:textSize">16sp</item>
       <item name="android:title">债务大厅</item>
    </style>

    <style name="ExpandedTextSize">
        <item name="android:textSize">0sp</item>
        <item name="android:text"></item>
    </style>

    <style name="debtmsg">
        <item name="android:gravity">left</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#6A6A6A</item>

    </style>

    <style name="debtmsg1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="debtmsg2">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:layout_marginLeft">1dp</item>
    </style>
    <style name="dataattestation">

        <item name="android:background">@drawable/shape_linearyout</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- 关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">#F0F0F0</item>
        <!-- witch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">#6A6A6A</item>


        <item name="colorAccent">#39ac39</item>
    </style>
</resources>